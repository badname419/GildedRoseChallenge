@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Item List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action-controller="Items" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Create New Item
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-cordered rable-stripped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Item Name
                </th>
                <th>
                    Sell In
                </th>
                <th>
                    Quality
                </th>
                <th>
                    Type
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Name
                </td>
                <td width="10%">
                    @obj.SellIn
                </td>
                <td width="10%">
                    @obj.Quality
                </td>
                <td width="20%">
                    @obj.Type
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Items" asp-action="Edit" asp-route-id="@obj.ID"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>&nbsp Edit</a>
                    </div>
                    <div class="btn-group" role="group">
                        <a asp-controller="Items" asp-action="Delete" asp-route-id="@obj.ID"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash"></i>&nbsp Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
</table>
<br /><br />
 <div class="row pt-4">
        <div class="col-6 text-end">
            <a asp-action-controller="Items" asp-action="Update" class="btn btn-dark">
                <i class="bi bi-arrow-right-square"></i> &nbsp; Next Day
            </a>
        </div>
        <div class="col-6">
            <a asp-action-controller="Items" asp-action="Reset" class="btn btn-secondary">
                <i class="bi bi-arrow-clockwise"></i> &nbsp; Reset
            </a>
        </div>
    </div>
</div>

